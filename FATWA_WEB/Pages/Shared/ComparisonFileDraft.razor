                                </div>
                                <div class="col-12 detailSection">
                                    <div class="detailHeading">
                                        <h3>@translationState.Translate("Created_By") </h3>
                                    </div> <div class="detailContent">
                                        <h3 class="myoverflow" Title="@comparisonVM1.CreatedBy">@comparisonVM1.CreatedBy</h3>
                                    </div>
                                </div>
                            </div>
                        </ChildContent>
                    </RadzenFieldset>
                    <TelerikPdfViewer @ref="PdfViewerRef"
                                      Zoom="1"
                                      Width="100%"
                                      Height="800px"
                                      Data="@comparisonVM1.File">
                        <PdfViewerToolBar>
                            <PdfViewerToolBarSeparator />
                            <PdfViewerToolBarPagerTool />
                            <PdfViewerToolBarSpacer />
                            <PdfViewerToolBarSelectionTool />
                            <PdfViewerToolBarSpacer />
                            <PdfViewerToolBarSearchTool />
                        </PdfViewerToolBar>
                    </TelerikPdfViewer>
                </div>
