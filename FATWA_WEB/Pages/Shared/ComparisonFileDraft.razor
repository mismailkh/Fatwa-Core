                                    <div class="detailHeading">
                                        <h3>@translationState.Translate("Version_Number") </h3>
                                    </div> <div class="detailContent">
                                        <h3 class="myoverflow" Title="@comparisonVM2.VersionNumber">@comparisonVM2.VersionNumber</h3>
                                    </div>
                                </div>
                                <div class="col-12 detailSection">
                                    <div class="detailHeading">
                                        <h3>@translationState.Translate("Created_By") </h3>
                                    </div> <div class="detailContent">
                                        <h3 class="myoverflow" Title="@comparisonVM2.CreatedBy">@comparisonVM2.CreatedBy</h3>
