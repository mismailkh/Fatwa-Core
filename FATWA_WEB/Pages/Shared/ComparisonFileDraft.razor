                <div class="file-container">
                    <RadzenFieldset AllowCollapse="false" Style=" margin: 40px 10px;">
                        <HeaderTemplate>
                            <span class="d-inline-flex align-items-center align-middle">
                                <b>@translationState.Translate("Document_Details")</b>
                            </span>
                        </HeaderTemplate>
                        <ChildContent>
                            <div class="row no-gutters">
                                <div class="col-12 detailSection">
                                    <div class="detailHeading">
                                        <h3>@translationState.Translate("Version_Number") </h3>
                                    </div> <div class="detailContent">
                                        <h3 class="myoverflow" Title="@comparisonVM1.VersionNumber">@comparisonVM1.VersionNumber</h3>
