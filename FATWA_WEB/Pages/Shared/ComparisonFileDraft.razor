@page "/fileDraft-comparison/{DraftId}/{VersionId1}/{VersionId2}"
@layout MainLayout
@using DiffPlex
@using DiffPlex.DiffBuilder
@using DiffPlex.DiffBuilder.Model
<PageTitle>@translationState.Translate("Compare_FileDraft")</PageTitle>
