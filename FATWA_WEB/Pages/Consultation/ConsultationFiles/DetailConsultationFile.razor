                                                                            <div class="detailHeading">
                                                                                <h3>@translationState.Translate("Contract_Amount_75000KD"):</h3>
                                                                            </div>
                                                                            <div class="detailContent">
                                                                                @if (@consultationFile?.ContractAmount75000KD == true)
                                                                                {
                                                                                    <h3>@translationState.Translate("Yes")</h3>
                                                                                }
