                                                                        <Template Context="rowItem">
                                                                        <RadzenButton ButtonStyle="ButtonStyle.Secondary"
                                                                        Icon="visibility"
                                                                        Size="ButtonSize.Small"
                                                                        Title="@translationState.Translate("Detail")"
                                                                        Click="@((args) => ViewHistoryDetail(rowItem))"
                                                                        @onclick:stopPropagation="true" />
                                                                        </Template>
                                                                        </RadzenDataGridColumn>*@
                                                                        </Columns>
                                                                    </RadzenDataGrid>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </RadzenTabsItem>

                                                    <RadzenTabsItem Text="@translationState.Translate("Transfer_History")">
                                                        <div class="row pb-2">
                                                            <div class="col-12 datagrid-rz-label">
                                                                <div class="tableContent ">
                                                                    <RadzenDataGrid @ref="transferHistoryGrid"
                                                                                    AllowPaging="true"
                                                                                    PageSize="@systemSettingState.Grid_Pagination"
                                                                                    Data="@cmsCaseRequestTransferHistory"
                                                                                    TItem="CmsTransferHistoryVM"
                                                                                    EmptyText="@translationState.Translate("No_record_found")"
                                                                                    Width="100%"
                                                                                    AllowFiltering="false"
                                                                                    FilterMode="Radzen.FilterMode.Advanced"
                                                                                    AllowSorting="false"
                                                                                    PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                                        <Columns>
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "SectorFromEn" : "SectorFromAr") Title="@translationState.Translate("Sector_From")" />
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "SectorToEn" : "SectorToAr") Title="@translationState.Translate("Sector_To")" />
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property="Reason" Title="@translationState.Translate("Reason")">
                                                                                <Template Context="reason">
                                                                                    @if (reason.Reason != null)
                                                                                    {
                                                                                        @if (reason.Reason.Length > 30)
                                                                                        {
                                                                                            @reason.Reason.Substring(0, 30) <a href="#" @onclick="@(() => OnDescriptionFullReasonDetail(reason.Reason))" @onclick:preventDefault>@translationState.Translate("Role_Description_3_dot")</a>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            @reason.Reason
                                                                                        }
                                                                                    }
                                                                                </Template>
                                                                            </RadzenDataGridColumn>
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "UserName_En" : "UserName_Ar") Title="@translationState.Translate("Created_By")" />
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property="CreatedDate" FormatString="{0:dd/MM/yyyy hh:mm tt}" Title="@translationState.Translate("Date")" />
                                                                            <RadzenDataGridColumn Width="60px" TItem="CmsTransferHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "StatusEn" : "StatusAr") Title="@translationState.Translate("Status")" />
                                                                        </Columns>
                                                                    </RadzenDataGrid>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </RadzenTabsItem>
                                                </Tabs>
                                            </RadzenTabs>
                                        </RadzenAccordionItem>
                                    </Items>
                                </RadzenAccordion>

                                @if (consultationFile?.SectorTypeId == (int)OperatingSectorTypeEnum.Contracts && consultationFile?.ConsultationPartysDetailsForFile.Count() != 0)
                                {
                                    <RadzenAccordion>
                                        <Items>
                                            <RadzenAccordionItem Text="@translationState.Translate("Parties")">

                                                <div class="row pb-2">
                                                    <div class="col-12 datagrid-rz-label">
                                                        <div class="tableContent table-responsive">

                                                            <RadzenDataGrid @ref="consultationPartyGrid"
                                                                            AllowPaging="true"
                                                                            AllowSorting="true"
                                                                            PageSize="5"
                                                                            ColumnWidth="200px"
                                                                            Data="@consultationFile?.ConsultationPartysDetailsForFile"
                                                                            TItem="ConsultationPartyListVM">
                                                                <Columns>
                                                                    <RadzenDataGridColumn TItem="ConsultationPartyListVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "PartyTypeEn" : "PartyTypeAr") Title="@translationState.Translate("Party_Type")" />
