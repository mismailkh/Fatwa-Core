                                                    <div class="col-12 datagrid-rz-label">
                                                        <div class="tableContent ">

                                                            <div class="row no-gutters">

                                                                <RadzenDataGrid @ref="consultationArticleGrid"
                                                                                AllowPaging="true"
                                                                                PageSize="5"
                                                                                Data="@consultationFile?.ConsultationArticlesDetailsForFile"
                                                                                TItem="ConsultationArticleByConsultationIdListVM">
                                                                    <Columns>
                                                                        <RadzenDataGridColumn TItem="ConsultationArticleByConsultationIdListVM" Property="SectionName" Title="@translationState.Translate("Section_Name")" />
                                                                        <RadzenDataGridColumn TItem="ConsultationArticleByConsultationIdListVM" Property="ArticleTitle" Title="@translationState.Translate("Article_Title")" />
                                                                        <RadzenDataGridColumn TItem="ConsultationArticleByConsultationIdListVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "StatusEn" : "StatusAr") Title="@translationState.Translate("Status")" />
