                                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                                                <div class="tableContent table-responsive">
                                                                    <RadzenDataGrid @ref="AssigneeGrid"
                                                                                    AllowPaging="true"
                                                                                    PageSize="@systemSettingState.Grid_Pagination"
                                                                                    Data="@consultationFileAssignmentHistoryVM"
                                                                                    TItem="ConsultationFileAssignmentHistoryVM"
                                                                                    EmptyText="@translationState.Translate("No_record_found")"
                                                                                    Width="100%"
                                                                                    AllowFiltering="false"
                                                                                    FilterMode="Radzen.FilterMode.Advanced"
                                                                                    AllowSorting="true"
                                                                                    PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                                        <Columns>
                                                                            <RadzenDataGridColumn TItem="ConsultationFileAssignmentHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "AssignorNameEn" : "AssignorNameAr") Title="@translationState.Translate("Assigned_By")">
                                                                            </RadzenDataGridColumn>
                                                                            <RadzenDataGridColumn TItem="ConsultationFileAssignmentHistoryVM" Width="80px" Property="CreatedDate" FormatString="{0:dd-MM-yyyy}" Title="@translationState.Translate("Date")">
                                                                            </RadzenDataGridColumn>
                                                                            <RadzenDataGridColumn TItem="ConsultationFileAssignmentHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "AssigneeNameEn" : "AssigneeNameAr") Title="@translationState.Translate("Assigned_To")">
                                                                            </RadzenDataGridColumn>
                                                                            <RadzenDataGridColumn TItem="ConsultationFileAssignmentHistoryVM" Width="160px" Property="Name" Title="@translationState.Translate("Remarks")">
                                                                                <Template Context="rowItem">
                                                                                    <RadzenLabel class="label-Remarks" Text="@translationState.Translate(rowItem.Remarks)" title="@translationState.Translate(rowItem.Remarks)" />
                                                                                </Template>
                                                                            </RadzenDataGridColumn>
                                                                        </Columns>
                                                                    </RadzenDataGrid>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </RadzenTabsItem>
                                                    <RadzenTabsItem Text="@translationState.Translate("File_History")">
                                                        <div class="row pb-2">
                                                            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
