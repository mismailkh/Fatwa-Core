              <div class="col-md-3">
                <RadzenLabel Text="السماح للنشر" Component="AllowtoPublish" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenCheckBox TriState="true" @bind-Value="@(lmsliterature.AllowtoPublish)" Name="AllowtoPublish">
                </RadzenCheckBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="نوع الأدب" Component="TypeId" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDownDataGrid Data="@getLmsLiteratureTypesForTypeIdResult" TextProperty="Name_En" ValueProperty="TypeId" Placeholder="Choose LmsLiteratureType" ShowSearch="false" style="width: 100%" @bind-Value="@(lmsliterature.TypeId)" Name="TypeId">
