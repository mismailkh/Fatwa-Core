                                                            <Columns>
                                                                <RadzenDataGridColumn TItem="TempAttachementVM" Width="50px" Frozen="true" Title="@translationState.Translate("Action")" Context="attachment" Filterable="false" Sortable="false" TextAlign="Radzen.TextAlign.Center">
                                                                    <Template Context="attachment">
                                                                        <RadzenButton ButtonStyle="ButtonStyle.Info"
                                                                                      Icon="visibility"
                                                                                      Class="viewIcon"
                                                                                      title="@translationState.Translate("View")"
