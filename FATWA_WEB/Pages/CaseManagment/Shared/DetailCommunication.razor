                                                                           DocumentPath="@DocumentPath"
                                                                           InteractionMode="InteractionMode.Pan">
                                                        </SfPdfViewerServer>
                                                    }
                                                </div>
                                            </div>
                                        </RadzenAccordionItem>
                                    </Items>
                                </RadzenAccordion>
                            }
                        </div>
                    </div>
                </div>
                @if (loginState.UserDetail.SectorTypeId == (int)OperatingSectorTypeEnum.CivilCommercialRegionalCases && communicationDetail?.StopExeRejectionReason != null)
                {
                    <div class="row">
                        <div class="col-12">
                            <RadzenLabel Text="@translationState.Translate("Rejection_Reason")" Component="Remarks" style="width: 100%" />
                            <RadzenTextArea Placeholder="@translationState.Translate("Reason")" @bind-Value="@(communicationDetail.StopExeRejectionReason)" Name="Remarks" Disabled="true" Rows="3" class="w-100" />
                        </div>
                    </div>
                }
                @if (Activity == (int)CommunicationTypeEnum.G2GTarasolCorrespondence)
                {
                    <RadzenAccordion>
                        <Items>
                            <RadzenAccordionItem Text="@translationState.Translate("Correspondence_History")">
                                <div class="row pt-4">
                                    <div class="col-12">
                                        <RadzenFieldset>
                                            <ChildContent>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="form-group">
                                                            <div class="row tableContent table-responsive no-gutters pb-3">
                                                                <RadzenDataGrid EmptyText="@translationState.Translate("No_record_found")"
                                                                @ref="CorrespondenceHistoryGrid"
                                                                                Data="@CorrespondenceHistory"
                                                                                AllowFiltering="false"
                                                                                FilterMode="Radzen.FilterMode.Advanced"
                                                                                AllowPaging="true"
                                                                                AllowSorting="true"
                                                                                TItem="CorrespondenceHistoryVM"
                                                                                PageSize="@systemSettingState.Grid_Pagination"
                                                                                PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                                    <Columns>

                                                                        <RadzenDataGridColumn TItem="CorrespondenceHistoryVM" Width="150px" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "SenderNameEn" : "SenderNameAr") Title="@translationState.Translate("Sender")" />
                                                                        <RadzenDataGridColumn TItem="CorrespondenceHistoryVM" Width="150px" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "RecieverNameEn" : "RecieverNameAr") Title="@translationState.Translate("Reciever")" />
                                                                        <RadzenDataGridColumn TItem="CorrespondenceHistoryVM" Width="150px" Property="Reason" Title="@translationState.Translate("Reason")" />

                                                                        <RadzenDataGridColumn TItem="CorrespondenceHistoryVM" Width="150px" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "ActionEn" : "ActionAr") Title="@translationState.Translate("Action")" />

                                                                    </Columns>
                                                                </RadzenDataGrid>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </ChildContent>
                                        </RadzenFieldset>
                                    </div>
                                </div>
                            </RadzenAccordionItem>
                        </Items>
                    </RadzenAccordion>
                }
                @if (communicationDetail != null)
                {
                    <div class="buttoncontainer">
                        <input type="checkbox" id="toggle" />
                        <label class="floatingbutton" for="toggle"></label>
                        <nav class="nav">
                            <ul>
                                <TelerikButton Class="cancleBtn"
                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                               ThemeColor="light"
                                               OnClick="@BtnBack"> @translationState.Translate("Back") </TelerikButton>
                                @if (!managerTaskReminderData.Where(x => x.ManagerId == loginState.UserDetail.UserId).Any())
                            {
                                @if (Activity == (int)CommunicationTypeEnum.G2GTarasolCorrespondence)
                                {
                                    if (IsHOS)
                                    {
                                        <TelerikButton Class="cancleBtn"
                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                       ThemeColor="light"
                                                       OnClick="@ForwardToLawyer"> @translationState.Translate("Forward_To_Lawyer") </TelerikButton>
                                        <TelerikButton Class="cancleBtn"
                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                       ThemeColor="light"
                                                       OnClick="@ForwardToSector"> @translationState.Translate("Forward_To_Sector") </TelerikButton>
                                        <TelerikButton Class="cancleBtn"
                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                       ThemeColor="light"
                                                       OnClick="@SendBackToSender"> @translationState.Translate("Send_Back_To_Sender") </TelerikButton>
                                    }
                                    else
                                    {
                                        <TelerikButton Class="cancleBtn"
                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                       ThemeColor="light"
                                                       OnClick="@SendBackToHos"> @translationState.Translate("Send_Back_To_Hos") </TelerikButton>
                                    }

                                }

                                @if (loginState.UserDetail.SectorTypeId != (int)OperatingSectorTypeEnum.CivilCommercialPartialUrgentCases
                               && communicationDetail?.StopExeRejectionReason != null) // need to reset this button location / condition
                                {
                                    <TelerikButton Class="cancleBtn"
                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                   ThemeColor="light"
                                                   OnClick="@CompleteTask"> @translationState.Translate("Completed") </TelerikButton>
                                }
                                else
                                {
                                    @if (Activity == (int)CommunicationTypeEnum.StopExecutionOfJudgment
                                   && loginState.UserDetail.SectorTypeId != (int)OperatingSectorTypeEnum.CivilCommercialPartialUrgentCases)
                                    {
                                        <TelerikButton Class="cancleBtn"
                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                       OnClick="@BtnView"
                                                       ThemeColor="light"> @translationState.Translate("View_Details")</TelerikButton>
                                    }
                                    @if (taskDetailVM?.TaskStatusId == (int)TaskStatusEnum.Pending)
                                    {
                                        @if (Activity == (int)CommunicationTypeEnum.AcceptSaveAndCloseFile)
                                        {

                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light"
                                                           OnClick="@SaveAndCloseFile">
                                                @translationState.Translate("Save_And_Close_File")
                                            </TelerikButton>
                                        }
                                        else
                                        {
                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light"
                                                           OnClick="@CompleteTask"> @translationState.Translate("Completed") </TelerikButton>

                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="lightrequest-need-more-detail"
                                                           OnClick="@NeedMoreInfo"> @translationState.Translate("Legal_Notification_Reply") </TelerikButton>
                                        }
                                        @if (Activity == (int)CommunicationTypeEnum.StopExecutionOfJudgment
                                       && loginState.UserDetail.SectorTypeId == (int)OperatingSectorTypeEnum.CivilCommercialRegionalCases)
                                        {
                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@DraftAFile">@translationState.Translate("Draft_A_File")</TelerikButton>
                                        }
                                        @if (Activity == (int)CommunicationTypeEnum.StopExecutionOfJudgment
                                       && loginState.UserDetail.SectorTypeId == (int)OperatingSectorTypeEnum.CivilCommercialPartialUrgentCases)
                                        {
                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@ApproveFile">@translationState.Translate("Work_on_stop_execution_request_File")</TelerikButton>

                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@RejectFile">@translationState.Translate("Reject_stop_execution_requestt_File")</TelerikButton>
                                        }
                                    }
                                }
                            }

                        </ul>
                    </nav>
                </div>
                }
            }
            else
            {
                <div class="demo-alert demo-alert-error" role="alert">@translationState.Translate("No_record_found")</div>
            }
        </ChildContent>
    </RadzenContent>
}
else
{
    <div class="demo-alert demo-alert-error" role="alert">@translationState.Translate("Unauthorized")</div>
}
