<PageTitle>@translationState.Translate("View_Case_Details")</PageTitle>
@if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.RegisteredCase.View").Count() > 0)
{
    <RadzenContent Container="main">
        <ChildContent>
            <div class="row breadcrumbBar justify-content-center align-items-center pb-3">
