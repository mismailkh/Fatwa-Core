                                                                            <RadzenDataGridColumn TItem="CmsCaseAssigneesHistoryVM" Width="110px" FormatString="{0:dd/MM/yyyy  h:mm tt}" Property="CreatedDate" Title="@translationState.Translate("Date")">
                                                                            </RadzenDataGridColumn>
                                                                            <RadzenDataGridColumn TItem="CmsCaseAssigneesHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "AssigneeNameEn" : "AssigneeNameAr" ) Title="@translationState.Translate("Assigned_To")">
