@using FATWA_DOMAIN.Models.ViewModel.CaseManagment

@*History Author = 'Hassan Abbas' Date='2022-12-15' Version="1.0" Branch="master">Select Primary CAN for Linking selected CANs </History>*@
<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <RadzenLabel Text="@translationState.Translate("Primary_CAN_No")" />
                    <RadzenDropDown TValue="string"
                                    Data="@linkCANs.LinkedCANs"
                                    AllowFiltering="false"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    AllowClear="true"
                                    Name="Primary_File"
                                    @bind-Value="linkCANs.PrimaryCAN"
                                    Placeholder="@translationState.Translate("Select")"
                                    Style="display:block;">
                    </RadzenDropDown>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <RadzenLabel Text="@translationState.Translate("Linked_CANs")" />
                    <RadzenTextArea Placeholder="@translationState.Translate("Linked_CANs")" Rows="1" class="w-100" Disabled="true" @bind-Value="@LinkedCANs" Name="LinkedCANs" />
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center align-items-center py-4 pb-3 mt-2 popup-buttons-alignment">
            <div class="col-md-12 d-flex justify-content-end">
                <RadzenButton style="margin-left: 0.2rem !important" ButtonStyle="ButtonStyle.Secondary" Text="@translationState.Translate("Cancel")" Click="@(() => dialogService.Close(null))">
                </RadzenButton>
                <RadzenButton style="margin-left: 0.2rem !important" ButtonStyle="ButtonStyle.Primary" Text="@translationState.Translate("Submit")" Disabled="@(String.IsNullOrEmpty(linkCANs.PrimaryCAN))" Click="@LinkCANs">
                </RadzenButton>
            </div>
        </div>
    </div>
</div>
