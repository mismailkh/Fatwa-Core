                                                            {
                                                                <RadzenButton ButtonStyle="ButtonStyle.Danger"
                                                                              Class="deleteIcon"
                                                                              Icon="delete_outline"
                                                                              Title="@translationState.Translate("delete")"
                                                                              Size="ButtonSize.Small"
                                                                              Click="@((args) => RemoveContact( rowItem))"
                                                                              @onclick:stopPropagation="true" />
                                                            }
                                                        </Template>
                                                    </RadzenDataGridColumn>
                                                    <RadzenDataGridColumn TItem="ContactFileLinkVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "ContactTypeNameEn" : "ContactTypeNameAr") Title="@translationState.Translate("Contact_Type")" />
                                                    <RadzenDataGridColumn TItem="ContactFileLinkVM" Property="Name" Title="@translationState.Translate("Name")" />
                                                    @if (contactListForFileVm?.Select(x => x.JobRoleId) != null)
                                                    {
                                                        <RadzenDataGridColumn TItem="ContactFileLinkVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "JobRoleEn" : "JobRoleAr") Title="@translationState.Translate("Contact_Designation")" />
                                                    }
                                                    else if (contactListForFileVm?.Select(x => x.Designation) != null)
                                                    {
                                                        <RadzenDataGridColumn TItem="ContactFileLinkVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "DesignationNameEn" : "DesignationNameAr") Title="@translationState.Translate("Contact_Designation")" />

                                                    }
                                                    <RadzenDataGridColumn TItem="ContactFileLinkVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "WorkplaceNameEn" : "WorkplaceNameAr") Title="@translationState.Translate("Contact_WorkPlace")" />
                                                    <RadzenDataGridColumn TItem="ContactFileLinkVM" Property="PhoneNumber" Title="@translationState.Translate("Contact_Phone")" />
                                                </Columns>
                                            </RadzenDataGrid>
                                        </div>
                                    </div>
                                </div>
                            </RadzenTabsItem>
                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.Submenu.Timelog.TimelogList").Count() > 0)
                            {
                                <RadzenTabsItem Text="@translationState.Translate("Time_Log")">
                                    <RadzenAccordion>
                                        <Items>
                                            <TimeTrackingDataGrid ReferenceId="Guid.Parse(FileId)"></TimeTrackingDataGrid>
                                        </Items>
                                    </RadzenAccordion>
                                </RadzenTabsItem>
                            }
                        </Tabs>
                    </RadzenTabs>
                </RadzenCard>
            </div>
            @if (!managerTaskReminderData.Where(x => x.ManagerId == loginState.UserDetail.UserId).Any())
            {
                @if (taskDetailVM?.TaskStatusId != (int)TaskStatusEnum.Done && dataCommunicationService?.caseFile?.StatusId != (int)CaseFileStatusEnum.WithdrawnByGE)
                {
                    @if (caseFileTransferHistoryobj != null
                   && (caseFileTransferHistoryobj.StatusId != (int)ApprovalTrackingStatusEnum.Transfered
                   || caseFileTransferHistoryobj.SectorTo == loginState.UserDetail.SectorTypeId))
                    {
                        @if (loginState.UserRoles.Any(r => r.RoleId == SystemRoles.Lawyer) && dataCommunicationService.caseFile.IsAssigned == true || (loginState.UserRoles.Any(r => r.RoleId == SystemRoles.HOS || r.RoleId == SystemRoles.ViceHOS)))
                        {

                            <div class="buttoncontainer">
                                <input type="checkbox" id="toggle" />
                                <label class="floatingbutton" for="toggle"></label>
                                <nav class="nav">
                                    <ul>
                                        @if (caseFileSectorAssignment.Any(x => x.IsReadOnly == true))
                                        {

                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@AddContactWithFile"> @translationState.Translate("Add_Contact")</TelerikButton>

                                            @if (!dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@SaveImportantCase"> @translationState.Translate("Mark_As_Important")</TelerikButton>
                                            }
                                            @if (dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@DeleteImportantCase"> @translationState.Translate("Mark_As_Un_Important")</TelerikButton>
                                            }

                                        }
                                        else if (IsFinalJudgementIssued)
                                        {
                                            @if (!(loginState.UserRoles.Any(x => SystemRoles.Lawyer.Contains(x.RoleId))))
                                            {
                                                @if (dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.InProgress
                                               || dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.RegisteredInMoj
                                               || dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.RejectedByLawyer)
                                                {
                                                    @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.Transfer").Any())
                                                    {
                                                        <TelerikButton Class="cancleBtn"
                                                                       ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                       ThemeColor="light" OnClick="@Transfer"> @translationState.Translate("Transfer")</TelerikButton>
                                                    }
                                                }
                                            }
                                            @if (!(loginState.UserRoles.Any(x => SystemRoles.Lawyer.Contains(x.RoleId))))

                                            {

                                                @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.AsignToSector").Any())
                                                {
                                                    <TelerikButton Class="cancleBtn"
                                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                   ThemeColor="light" OnClick="@Assign" Enabled="@IsUnderfilingButtonsEnabled"> @translationState.Translate("Assign_File")</TelerikButton>
                                                }
                                            }
                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@AddContactWithFile"> @translationState.Translate("Add_Contact")</TelerikButton>

                                            @if (!dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@SaveImportantCase"> @translationState.Translate("Mark_As_Important")</TelerikButton>
                                            }
                                            @if (dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@DeleteImportantCase"> @translationState.Translate("Mark_As_Un_Important")</TelerikButton>
                                            }
                                        }
                                        else
                                        {

                                            @if (dataCommunicationService?.caseFile?.StatusId != (int)CaseFileStatusEnum.PendingForRegistrationAtMoj
                                           && dataCommunicationService?.caseFile?.StatusId != (int)CaseFileStatusEnum.RegisteredInMoj)
                                            {
                                                @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.SendCopy").Any())
                                                {
                                                    <TelerikButton Class="cancleBtn"
                                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                   ThemeColor="light" OnClick="@SendACopy"
                                                                   Enabled="@IsUnderfilingButtonsEnabled">@translationState.Translate("Send_A_Copy")</TelerikButton>
                                                }

                                                @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.MeetingRequest").Any())
                                                {

                                                    <TelerikButton Class="cancleBtn"
                                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                   ThemeColor="light" OnClick="@MeetingRequest"
                                                                   Enabled="@IsUnderfilingButtonsEnabled">@translationState.Translate("Meeting_Request")</TelerikButton>
                                                }

                                            }

                                            @if (dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.InProgress
                                           || dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.RegisteredInMoj
                                           || dataCommunicationService?.caseFile?.StatusId == (int)CaseFileStatusEnum.RejectedByLawyer)
                                            {
                                                @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.Transfer").Any())
                                                {
                                                    <TelerikButton Class="cancleBtn"
                                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                   ThemeColor="light" OnClick="@Transfer"> @translationState.Translate("Transfer")</TelerikButton>
                                                }
                                            }


                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.Comm.NeedMoreInfo.List").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@ViewRequestMoreInfo"
                                                               Enabled="@IsUnderfilingButtonsEnabled">@translationState.Translate("Legal_Notifications")</TelerikButton>
                                            }

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.SendToMoj").Any()
                                           && loginState.UserDetail.SectorTypeId != (int)OperatingSectorTypeEnum.AdministrativeRegionalCases
                                           && loginState.UserDetail.SectorTypeId != (int)OperatingSectorTypeEnum.CivilCommercialRegionalCases
                                           && IsSentToMOJ)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               Enabled="@(IsUnderfilingButtonsEnabled)"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               OnClick="@SendToMojTeam">@translationState.Translate("Send_Moj_Team")</TelerikButton>
                                            }

                                            <TelerikButton Class="cancleBtn"
                                                           ButtonType="Telerik.Blazor.ButtonType.Button"
                                                           ThemeColor="light" OnClick="@AddContactWithFile"> @translationState.Translate("Add_Contact")</TelerikButton>

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.DraftDocument.CreateButton").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@DraftAFile"
                                                               Enabled="@IsUnderfilingButtonsEnabled">@translationState.Translate("Draft_A_File")</TelerikButton>
                                            }

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.AssignToLawyer").Any()
                                           && (dataCommunicationService.caseFile?.StatusId == (int)CaseFileStatusEnum.AssignedToRegionalSector
                                           || dataCommunicationService.caseFile?.StatusId == (int)CaseFileStatusEnum.RejectedByLawyer
                                           || dataCommunicationService.caseFile?.StatusId == (int)CaseFileStatusEnum.InProgress
                                           || dataCommunicationService.caseFile?.StatusId == (int)CaseFileStatusEnum.AssignedToPartialUrgentSector))
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               Enabled="@(dataCommunicationService.caseFile?.StatusId != (int)CaseFileStatusEnum.AssignToLawyer && IsUnderfilingButtonsEnabled)"
                                                               OnClick="@AssignToLawyer">@translationState.Translate("Assign_To_Lawyer")</TelerikButton>
                                            }

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.AsignToSector").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@Assign" Enabled="@IsUnderfilingButtonsEnabled"> @translationState.Translate("Assign_File")</TelerikButton>
                                            }

                                            @if (caseRequest.RequestTypeId == null && caseRequest.SectorTypeId == null && caseRequest.CreatedBy == "MOJ RPA")
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@AssignMojMigratedFileToSector"> @translationState.Translate("Assign_Migrated_CaseFile_To_Sector")</TelerikButton>
                                            }

                                            @if ((bool)dataCommunicationService?.caseFile?.IsCaseRegistered
                                           && (caseRequest.SubTypeId == (int)RequestSubTypeEnum.PerformOrderRequest
                                           || caseRequest.SubTypeId == (int)RequestSubTypeEnum.OrderOnPetitionRequest))
                                            {
                                                <TelerikButton Class="cancleBtn mx-2"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               OnClick="@ViewCaseDetail">@translationState.Translate("View_Case_Detail")</TelerikButton>
                                            }
                                            @if (!dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@SaveImportantCase"> @translationState.Translate("Mark_As_Important")</TelerikButton>
                                            }
                                            @if (dataCommunicationService.caseFile.IsImportant)
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@DeleteImportantCase"> @translationState.Translate("Mark_As_Un_Important")</TelerikButton>
                                            }
                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseFile.TransferRequest.List").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light" OnClick="@RequestForTransfer"> @translationState.Translate("Request_For_Transfer")</TelerikButton>
                                            }
                                        }
                                    </ul>
                                </nav>
                            </div>

                        }
                    }

                }
            }
        </ChildContent>
    </RadzenContent>

}
else
{
    <div class="demo-alert demo-alert-error" role="alert">@translationState.Translate("Unauthorized")</div>
}


