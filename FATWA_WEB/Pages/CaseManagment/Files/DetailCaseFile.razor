                            </RadzenTabsItem>
                            <RadzenTabsItem Text="@translationState.Translate("File_Contact")">
                                <div class="row pb-2 pt-4">
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                        <div class="tableContent table-responsive">
                                            <RadzenDataGrid @ref="ContactGrid"
                                                            AllowPaging="true"
                                                            PageSize="@systemSettingState.Grid_Pagination"
                                                            ColumnWidth="200px"
                                                            Data="@contactListForFileVm"
                                                            TItem="ContactFileLinkVM"
                                                            EmptyText="@translationState.Translate("No_record_found")"
                                                            Width="100%"
                                                            AllowFiltering="false"
                                                            FilterMode="Radzen.FilterMode.Advanced"
                                                            AllowSorting="true"
                                                            PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                <Columns>
                                                    <RadzenDataGridColumn TItem="ContactFileLinkVM" Title="@translationState.Translate("Action")" Filterable="false" Sortable="false" Width="90px" TextAlign="TextAlign.Center">
                                                        <Template Context="rowItem">
                                                            <RadzenButton ButtonStyle="ButtonStyle.Info"
                                                                          Class="viewIcon"
                                                                          Title="@translationState.Translate("Detail")"
                                                                          Icon="visibility"
                                                                          Size="ButtonSize.Small"
                                                                          Click="@((args) => DetailContact(rowItem))"
