                                                        IsCaseRequest="true"
                                                        SubModuleId="(int)SubModuleEnum.CaseRequest"
                                                        ModuleId="(int)WorkflowModuleEnum.CaseManagement "
                                                        ShowCorrespondenceButton="true" />
                                        </RadzenAccordionItem>
                                    </Items>
                                </RadzenAccordion>
                                <RadzenAccordion>
                                    <Items>
                                        <RadzenAccordionItem Text="@translationState.Translate("Linked_Requests")" Selected="true">
