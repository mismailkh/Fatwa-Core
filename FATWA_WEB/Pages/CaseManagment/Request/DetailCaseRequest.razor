                                                                        FilterMode="Radzen.FilterMode.Advanced"
                                                                        AllowSorting="false"
                                                                        PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                            <Columns>
                                                                <RadzenDataGridColumn TItem="CmsCaseRequestHistoryVM" Title="@translationState.Translate("Action")" Filterable="false" Sortable="false" Width="60px" TextAlign="TextAlign.Center">
                                                                    <Template Context="rowItem">
                                                                        <RadzenButton ButtonStyle="ButtonStyle.Secondary"
                                                                                      Icon="visibility"
                                                                                      Size="ButtonSize.Small"
