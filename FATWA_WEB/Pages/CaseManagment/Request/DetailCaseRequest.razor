                                <RadzenTabsItem Text="@translationState.Translate("Time_Log")">
                                    <RadzenAccordion>
                                        <Items>
                                            <TimeTrackingDataGrid ReferenceId="Guid.Parse(RequestId)"></TimeTrackingDataGrid>
                                        </Items>
                                    </RadzenAccordion>
                                </RadzenTabsItem>
                            }
                        </Tabs>
                    </RadzenTabs>
                </div>
            </div>
            @if (!managerTaskReminderData.Where(x => x.ManagerId == loginState.UserDetail.UserId).Any())
            {
                @if (taskDetailVM?.TaskStatusId != (int)TaskStatusEnum.Done && caseRequestdetailVm.StatusId != (int)CaseRequestStatusEnum.Draft)
                {
                    @if (caseRequestTransferHistoryobj != null
                   && (caseRequestTransferHistoryobj.StatusId != (int)ApprovalTrackingStatusEnum.Transfered))
                    {

                    @if (caseRequestdetailVm.RequestId !=Guid.Empty && caseRequestdetailVm.StatusId < (int)CaseRequestStatusEnum.ConvertedToFile || caseRequestdetailVm.StatusId == (int)CaseRequestStatusEnum.PendingForGEResponse)
                        {
                            <div class="buttoncontainer">
                                <input type="checkbox" id="toggle" />
                                <label class="floatingbutton" for="toggle"></label>
                                <nav class="nav">
                                    <ul>
                                        @if (caseRequestdetailVm.StatusId == (int)CaseRequestStatusEnum.Rejected)
                                        {
                                            @if (!(loginState.UserRoles.Any(x => SystemRoles.Lawyer.Contains(x.RoleId))))
                                            {
                                                @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseRequest.Transfer").Any())
                                                {
                                                    <TelerikButton Class="cancleBtn"
                                                                   ButtonType="Telerik.Blazor.ButtonType.Button"
                                                                   ThemeColor="light"
                                                                   Enabled="false"
                                                                   OnClick="@Transfer">@translationState.Translate("Transfer")</TelerikButton>
                                                }
                                            }

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseRequest.SendCopy").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               Enabled="false"
                                                               OnClick="@SendCopyofRequest">@translationState.Translate("Send_A_Copy")</TelerikButton>
                                            }
                                        }
                                        else
                                        {

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseRequest.SendCopy").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               Enabled="@(caseRequestdetailVm.StatusId < (int)CaseRequestStatusEnum.RegisteredInMOJ || caseRequestdetailVm.StatusId == (int)CaseRequestStatusEnum.PendingForGEResponse)"
                                                               OnClick="@SendCopyofRequest">@translationState.Translate("Send_A_Copy")</TelerikButton>
                                            }

                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseRequest.Transfer").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               Enabled="@(caseRequestdetailVm.StatusId < (int)CaseRequestStatusEnum.RegisteredInMOJ || caseRequestdetailVm.StatusId == (int)CaseRequestStatusEnum.PendingForGEResponse)"
                                                               OnClick="@Transfer">@translationState.Translate("Transfer") </TelerikButton>
                                            }
                                        }

                                        @if (!(loginState.UserRoles.Any(x => SystemRoles.Lawyer.Contains(x.RoleId))))
                                        {
                                            @if (loginState.ClaimList.Where(x => x.Value == "Permissions.CMS.CaseRequest.AssignToLawyer").Any())
                                            {
                                                <TelerikButton Class="cancleBtn"
                                                               ButtonType="Telerik.Blazor.ButtonType.Button"
                                                               ThemeColor="light"
                                                               Enabled="@(caseRequestdetailVm.StatusId < (int)CaseRequestStatusEnum.ConvertedToFile || caseRequestdetailVm.StatusId == (int)CaseRequestStatusEnum.PendingForGEResponse)"
                                                               OnClick="@AssignToLawyer">@translationState.Translate("Assign_To_Lawyer")</TelerikButton>
                                            }
                                        }
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                }
            }

        </ChildContent>
    </RadzenContent>
}
else
{
