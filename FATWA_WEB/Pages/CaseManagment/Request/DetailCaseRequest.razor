                                                                                  Icon="visibility"
                                                                                  Size="ButtonSize.Small"
                                                                                  Click="@((args) => ViewResponse(rowItem))"
                                                                                  @onclick:stopPropagation="true" />

                                                                }
                                                                else
                                                                {
                                                                    <RadzenButton Style="background-color: #06be3d !important;" ButtonStyle="ButtonStyle.Secondary"
                                                                                  Icon="visibility"
                                                                                  Size="ButtonSize.Small"
                                                                                  Click="@((args) => ViewResponse(rowItem))"
                                                                                  @onclick:stopPropagation="true" />
                                                                }
