@using FATWA_DOMAIN.Models.ViewModel.CaseManagment

@*History Author = 'Hassan Abbas' Date='2022-12-15' Version="1.0" Branch="master">Select Primary Request for Linking selected Requests </History>*@
<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <RadzenLabel Text="@translationState.Translate("Primary_Request")" />
                    <RadzenDropDown TValue="Guid"
                                Data="@LinkedRequests"
                                AllowFiltering="true"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                AllowClear="true"
                                TextProperty="RequestNumber"
                                Name="Primary_Request"
                                ValueProperty="RequestId"
                                @bind-Value="linkCaseRequest.PrimaryRequestId"
                                Placeholder="@translationState.Translate("Select")"
                                Style="display:block;">
                    </RadzenDropDown>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                    <RadzenLabel Text="@translationState.Translate("Linked_Requests")" />
                    <RadzenTextArea Placeholder="@translationState.Translate("Linked_Requests")" Rows="1" class="w-100" Disabled="true" @bind-Value="@LinkedRequestNos" Name="LinkedRequestNos" />
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center align-items-center py-4 pb-3 mt-2 popup-buttons-alignment">
            <div class="col-md-12 d-flex justify-content-end">
                <RadzenButton style="margin-left: 0.2rem !important" ButtonStyle="ButtonStyle.Secondary" Text="@translationState.Translate("Cancel")" Click="@(() => dialogService.Close(null))">
                </RadzenButton>
                <RadzenButton style="margin-left: 0.2rem !important" ButtonStyle="ButtonStyle.Primary" Text="@translationState.Translate("Submit")" Disabled="@(linkCaseRequest.PrimaryRequestId == Guid.Empty)" Click="@LinkCaseRequests">
                </RadzenButton>
            </div>
        </div>
    </div>
</div>
