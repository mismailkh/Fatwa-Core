                            <RadzenTabsItem Text="@translationState.Translate("History_Details")">

                                <RadzenAccordion>
                                    <Items>
                                        <RadzenAccordionItem Text="@translationState.Translate("History_Details")" Selected="true">
                                            <div class="row pb-2">
                                                <div class="col-12 datagrid-rz-label">
                                                    <div class="tableContent ">
                                                        <RadzenDataGrid @ref="HistoryGrid"
                                                                        AllowPaging="true"
                                                                        PageSize="@systemSettingState.Grid_Pagination"
                                                                        Data="@cmsCaseRequestHistory"
                                                                        TItem="CmsCaseRequestHistoryVM"
                                                                        EmptyText="@translationState.Translate("No_record_found")"
                                                                        Width="100%"
                                                                        AllowFiltering="false"
                                                                        FilterMode="Radzen.FilterMode.Advanced"
                                                                        AllowSorting="true"
                                                                        PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                            <Columns>
                                                                <RadzenDataGridColumn TItem="CmsCaseRequestHistoryVM" Property=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "EventEn" : "EventAr") Title="@translationState.Translate("Event")">
                                                                </RadzenDataGridColumn>
                                                                <RadzenDataGridColumn TItem="CmsCaseRequestHistoryVM" Width="80px" Property="CreatedDate" FormatString="{0:dd/MM/yyyy}" Title="@translationState.Translate("Date")" />
