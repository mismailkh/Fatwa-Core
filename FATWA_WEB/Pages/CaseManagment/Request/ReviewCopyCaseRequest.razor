                                                                        Width="100%"
                                                                        AllowFiltering="false"
                                                                        FilterMode="Radzen.FilterMode.Advanced"
                                                                        AllowSorting="true"
                                                                        PagerHorizontalAlign="Radzen.HorizontalAlign.Center">
                                                            <Columns>
                                                                <RadzenDataGridColumn TItem="CommunicationListVM" Title="@translationState.Translate("Action")"
