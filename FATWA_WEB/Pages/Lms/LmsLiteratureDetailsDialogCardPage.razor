@*@page "/lmsliteraturedetail/{LiteratureId}"*@
@*

@page "/lmsliterature-detail/{LiteratureId}"*@
@using FATWA_DOMAIN.Models

<!-- <History Author = 'Umer Zaman' Date='2022-03-21' Version="1.0" Branch="master">Edit Existing Literature Index</History> -->
@if (loginState.ClaimList.Where(x => x.Value == "Permissions.LMS.Literatures.View").Count() > 0)
{
  
<RadzenContent Container="main">
    <ChildContent>
        <div class="row">
            <div class="col-md-12">
                <RadzenTemplateForm TItem="LmsLiterature" Data="@lmsLiterature" Visible="@(lmsLiterature != null)">
                    <ChildContent>
                        <div class="row">
                            <div class="col-lg-6 d-flex">
                                <RadzenCard Style="width: 100%; overflow: hidden;">
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("Literature_name")</div>
                                            <b>@(lmsLiterature.Name)</b>
                                            <div class="mt-3">@translationState.Translate("Subject")</div>
                                            <b>@lmsLiterature.Subject_Ar</b>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>ISBN</div>
                                            <b>@(lmsLiterature.ISBN)</b>
                                            <div class="mt-3">@translationState.Translate("Author_Name")</div>
                                            <b>@lmsLiterature.Author_FullName_Ar</b>
                                        </div>
                                    </div>
                                </RadzenCard>
                            </div>
                            <div class="col-lg-6 d-flex">
                                <RadzenCard Style="width: 100%; overflow: hidden;">
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("Character")</div>
                                            <b>@(lmsLiterature.Characters)</b>
                                            <div class="mt-3">@translationState.Translate("number_of_pages")</div>
                                            <b>@lmsLiterature.NumberOfPages</b>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("number_of_borrowers")</div>
                                            <b>@(lmsLiterature.NumberOfBorrowedBooks)</b>
                                             <div>@translationState.Translate("Literary_genre_name")</div>
                                            <b>@(lmsLiterature.TypeId)</b>
                                        </div>
                                    </div>
                                </RadzenCard>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-lg-6 d-flex">
                                <RadzenCard Style="width: 100%; overflow: hidden;">
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("Literature_classification_name")</div>
                                            <b>@(lmsLiterature.ClassificationId)</b>
                                            <div class="mt-3">@translationState.Translate("Literature_Catalog_Name")</div>
                                            <b>@(lmsLiterature.IndexId)</b>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("Barcode")</div>
                                            <b>@(lmsLiterature.BarCodeNumber)</b>
                                            <div class="mt-3"> @translationState.Translate("Number_of_copies_of_literature")</div>
                                            <b>@(lmsLiterature.CopyCount)</b>
                                        </div>
                                    </div>
                                </RadzenCard>
                            </div>
                            <div class="col-lg-6 d-flex">
                                <RadzenCard Style="width: 100%; overflow: hidden;">
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("The_literature_created_by")</div>
                                            <b>@(lmsLiterature.CreatedBy)</b>
                                            <div class="mt-3">@translationState.Translate("Publications_purchase_price")</div>
                                            <b>@(lmsLiterature.Purchase_Price)</b>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <div>
                                            <div>@translationState.Translate("Book_purchase_date")</div>
                                                <b>@(lmsLiterature.Purchase_Date?.ToString("dd/MM/yyyy"))</b>
                                            <div class="mt-3">@translationState.Translate("Literature_is_presentable") </div>
                                            <b>@(lmsLiterature.IsViewable)</b>
                                        </div>
                                    </div>
                                </RadzenCard>
                            </div>
                        </div>
                    </ChildContent>
                </RadzenTemplateForm>
            </div>
        </div>
    </ChildContent>
</RadzenContent>
  
}
else{
     <div class="demo-alert demo-alert-error" role="alert">@translationState.Translate("Unauthorized")</div>
}
