        margin-top: -0.4rem;
    }

    .rz-switch {
        width: 2.5rem;
        min-width: 2.5rem;
        height: 1.5rem;
    }

    .rz-switch-circle {
        top: 1px;
        left: 1px;
        right: 0px;
        bottom: 1px;
    }

    .txtmsg:hover {
        font-size: 15px !important;
    }

    .multilinetext {
        white-space: pre-wrap;
    }
