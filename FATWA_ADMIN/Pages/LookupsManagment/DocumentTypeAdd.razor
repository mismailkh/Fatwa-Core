@using FATWA_DOMAIN.Models
@using FATWA_DOMAIN.Models.AdminModels.UserManagement;
@using FATWA_DOMAIN.Models.CommunicationModels;
@using static FATWA_DOMAIN.Enums.DmsEnums;

@layout MainLayout
@inject FATWA_ADMIN.Data.LoginState loginState

@*< History Author = 'Ammaar Naveed' Date = '2024-06-04' Version = "1.0" Branch = "master"> UI fixations in pages and dialogs</History>*@

<RadzenTemplateForm Data="@documenttypelist" Visible="@(documenttypelist != null)" TItem="AttachmentType" Submit="@SaveChanges">
    <ChildContent>
        <RadzenFieldset AllowCollapse="false" Style="margin-bottom: 20px">
            <HeaderTemplate>
                <span class="d-inline-flex align-items-center align-middle">
                    <b>@translationState.Translate("Document_Type")</b>
                </span>
            </HeaderTemplate>
            <ChildContent>
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <RadzenLabel Text="@(translationState.Translate("English_Name") + "*")" Component="Type" />
                            <RadzenTextBox Name="Type_En" Placeholder="@translationState.Translate("User_Name_English")" @bind-Value="@documenttypelist.Type_En" />
                            <RadzenRegexValidator Component="Type_En" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                            <RadzenRequiredValidator Component="Type_En" Text="@translationState.Translate("Required_Field")" />
                            <RadzenLengthValidator Component="Type_En" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <RadzenLabel Text="@(translationState.Translate("Arabic_Name") +"*")" Component="Type" />
                            <RadzenTextBox Name="Type_Ar" Placeholder="@translationState.Translate("User_Name_Arabic")" @bind-Value="@documenttypelist.Type_Ar" />
                            <RadzenRegexValidator Component="Type_Ar" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                            <RadzenRequiredValidator Component="Type_Ar" Text="@translationState.Translate("Required_Field")" />
                            <RadzenLengthValidator Component="Type_Ar" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <RadzenLabel Text="@(translationState.Translate("Module_Name"))" Component="ModuleName" />
                            <RadzenDropDown Data="@GetModule" AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowClear="true" Multiple="false"
                                            TextProperty=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "ModuleNameEn" : "ModuleNameAr") ValueProperty="ModuleId" Placeholder="@translationState.Translate("Select")" Disabled="@Disable"
                                            Style="display:block;" @bind-Value="@documenttypelist.ModuleId" Name="ModuleName" />
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <RadzenLabel Text="@translationState.Translate("Sub_type")" Component="SubtypeName" />
                            <RadzenDropDown Data="@GetSubtype" AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowClear="true" Multiple="false"
                                            TextProperty=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "Name_En" : "Name_Ar") ValueProperty="Id" Placeholder="@translationState.Translate("Select")" Disabled="@Disable"
                                            Style="display:block;" @bind-Value="@documenttypelist.SubTypeId" Name="SubtypeName" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="form-group">
                            <RadzenLabel Text="@(translationState.Translate("Description"))" Component="Description" />
                            <RadzenTextBox Name="Description" Placeholder="@translationState.Translate("Description")" @bind-Value="@documenttypelist.Description" />
                            <RadzenLengthValidator Component="Description" Max="1000" Text="@translationState.Translate("Max_Thousand_Characters")" />
                            <RadzenRegexValidator Component="Description" Text="@translationState.Translate("Cannot_Have_Trailing_Spaces")" Pattern="@RegexPatterns.NoSpacesPattern" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <div class="pb-3">
                            <RadzenCheckBox @bind-Value="@(documenttypelist.IsMandatory)" Name="IsMandatory" />
                            <RadzenLabel Text="@translationState.Translate("Is_Mandatory")" />
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="pb-3">
                            <RadzenCheckBox @bind-Value="@(documenttypelist.IsGePortalType)" Name="IsGePortalType" />
                            <RadzenLabel Text="@translationState.Translate("Is_Ge_Portal_Type")" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="pb-3">
                            <RadzenCheckBox class="NT-checkbox" @bind-Value="@(documenttypelist.IsOfficialLetter)" Name="IsOfficialLetter" />
                            <RadzenLabel Text="@translationState.Translate("Is_Official_Letter")" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="pb-3">
                            <RadzenCheckBox class="NT-checkbox" @bind-Value="@(documenttypelist.IsDigitallySign)" Name="IsDigitalSignature" />
                            <RadzenLabel Text="@translationState.Translate("Is_Digitally_Sign")" />
                        </div>
                    </div>
                </div>

            </ChildContent>
        </RadzenFieldset>
        @if (documenttypelist.IsDigitallySign)
        {
            <RadzenFieldset AllowCollapse="false" Style=" margin: 20px auto;">
                <HeaderTemplate>
                    <span class="d-inline-flex align-items-center align-middle">
                        <b>@translationState.Translate("Digital_Signature")</b>
                    </span>
                </HeaderTemplate>
                <ChildContent>
                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Designation"))" Component="Designation" />
                                <RadzenDropDown Data="@Designations"
                                                AllowFiltering="true"
                                                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                                AllowClear="true" SelectAllText="@translationState.Translate("Selected_All")"
                                                SelectedItemsText="@translationState.Translate("Items_Ielected")"
                                                Multiple="true"
                                                TextProperty=@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? "Name_En" : "Name_Ar")
                                                ValueProperty="Id"
                                                Placeholder="@translationState.Translate("Select")"
                                                Style="display:block;"
                                                @bind-Value="@documenttypelist.DesignationIds"
                                                Name="Designation" />
                            </div>
                        </div>
                        <div class="col-6">
                            <RadzenLabel Text="@(translationState.Translate("Digital_Signature_Methods"))" />
                            @foreach (var method in SigningMethods)
                            {
                                <div class="col-auto p-0 pt-3">
                                    <RadzenCheckBox TriState="false"
                                                    TValue="bool"
                                                    Value="@documenttypelist.SigningMethodIds.Contains(method.MethodId)"
                                                    Change="@(args => ChangeSigningMethod(args, method.MethodId))" />
                                    <RadzenLabel Text="@(Thread.CurrentThread.CurrentUICulture.Name == "en-US" ? method.NameEn : method.NameAr)" />
                                </div>
                            }
                        </div>
                    </div>
                </ChildContent>
            </RadzenFieldset>
        }
        <div class="row">
            <div class="col-12 p-3" style="text-align:end;">
                <RadzenButton ButtonType="Radzen.ButtonType.Submit" ButtonStyle="ButtonStyle.Primary"
                              Text="@(AttachmentTypeId==null? translationState.Translate("Save") : translationState.Translate("Update"))" style="margin-left: 0.2rem !important" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@translationState.Translate("Cancel")" Click="@Button2Click" />
            </div>
        </div>
    </ChildContent>
</RadzenTemplateForm>


