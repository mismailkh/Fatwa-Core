@using FATWA_DOMAIN.Models
@using FATWA_DOMAIN.Models.CaseManagment;
@layout MainLayout
 
<RadzenContent>
    <ChildContent>
        <RadzenTemplateForm class="form" Data="@LmsLiteratureAuthor" Visible="@(LmsLiteratureAuthor != null)" TItem="LmsLiteratureAuthor" Submit="@SaveChanges">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Full_Name_En") + " *")" />
                                <RadzenTextBox Name="Full_Name_English" Placeholder="@translationState.Translate("Full_Name_En")" @bind-Value="@LmsLiteratureAuthor.FullName_En" />
                                <RadzenRegexValidator Component="Full_Name_English" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                                <RadzenRequiredValidator Component="Full_Name_English" Text="@translationState.Translate("Required_Field")" />
                                <RadzenLengthValidator Component="Full_Name_English" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Full_Name_Ar") + " *")" />
                                <RadzenTextBox Name="Full_Name_Arabic" Placeholder="@translationState.Translate("Full_Name_Ar")" @bind-Value="@LmsLiteratureAuthor.FullName_Ar" />
                                <RadzenRegexValidator Component="Full_Name_Arabic" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                                <RadzenRequiredValidator Component="Full_Name_Arabic" Text="@translationState.Translate("Required_Field")" />
                                <RadzenLengthValidator Component="Full_Name_Arabic" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("FirstName_En"))" Component="First_Name_English" />
                                <RadzenTextBox Name="First_Name_English" Placeholder="@translationState.Translate("FirstName_En")" @bind-Value="@LmsLiteratureAuthor.FirstName_En" />
                                <RadzenRegexValidator Component="First_Name_English" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                                <RadzenLengthValidator Component="First_Name_English" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("FirstName_Ar"))" Component="First_Name_Arabic" />
                                <RadzenTextBox Name="First_Name_Arabic" Placeholder="@translationState.Translate("FirstName_Ar")" @bind-Value="@LmsLiteratureAuthor.FirstName_Ar" />
                                <RadzenRegexValidator Component="First_Name_Arabic" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                                <RadzenLengthValidator Component="First_Name_Arabic" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("SecondName_En"))" Component="Second_Name_English" />
                                <RadzenTextBox Name="Second_Name_English" Placeholder="@translationState.Translate("SecondName_En")" @bind-Value="@LmsLiteratureAuthor.SecondName_En" />
                                <RadzenRegexValidator Component="Second_Name_English" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                                <RadzenLengthValidator Component="Second_Name_English" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("SecondName_Ar"))" Component="Second_Name_English" />
                                <RadzenTextBox Name="Second_Name_Arabic" Placeholder="@translationState.Translate("SecondName_Ar")" @bind-Value="@LmsLiteratureAuthor.SecondName_Ar" />
                                <RadzenRegexValidator Component="Second_Name_Arabic" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                                <RadzenLengthValidator Component="Second_Name_Arabic" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Third_Name_En"))" Component="Third_Name_English" />
                                <RadzenTextBox Name="Third_Name_English" Placeholder="@translationState.Translate("Third_Name_En")" @bind-Value="@LmsLiteratureAuthor.ThirdName_En" />
                                <RadzenRegexValidator Component="Third_Name_English" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                                <RadzenLengthValidator Component="Third_Name_English" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Third_Name_Ar"))" Component="Third_Name_Arabic" />
                                <RadzenTextBox Name="Third_Name_Arabic" Placeholder="@translationState.Translate("Third_Name_Ar")" @bind-Value="@LmsLiteratureAuthor.ThirdName_Ar" />
                                <RadzenRegexValidator Component="Third_Name_Arabic" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                                <RadzenLengthValidator Component="Third_Name_Arabic" Max="30" Text="@translationState.Translate("Max_Thirty_Characters")" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Address_En") + " *")" />
                                <RadzenTextArea Name="Address_English" Placeholder="@translationState.Translate("Address_En")" @bind-Value="@LmsLiteratureAuthor.Address_En" />
                                <RadzenRegexValidator Component="Address_English" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                                <RadzenRequiredValidator Component="Address_English" Text="@translationState.Translate("Required_Field")" />
                                <RadzenLengthValidator Component="Address_English" Max="150" Text="@translationState.Translate("Max_One_Fifty_Characters")" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <RadzenLabel Text="@(translationState.Translate("Address_Ar") + " *")" />
                                <RadzenTextArea Name="Address_Arabic" Placeholder="@translationState.Translate("Address_Ar")" @bind-Value="@LmsLiteratureAuthor.Address_Ar" />
                                <RadzenRegexValidator Component="Address_Arabic" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                                <RadzenRequiredValidator Component="Address_Arabic" Text="@translationState.Translate("Required_Field")" />
                                <RadzenLengthValidator Component="Address_Arabic" Max="150" Text="@translationState.Translate("Max_One_Fifty_Characters")" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="popup-buttons-alignment px-0">
                                <RadzenButton ButtonType="Radzen.ButtonType.Submit"
                                              Style="margin-left: 10px; margin-right: 10px;"
                                              ButtonStyle="ButtonStyle.Primary" Text="@translationState.Translate("Save")"/>
                                <RadzenButton Text="@translationState.Translate("Cancel")"
                                              ButtonStyle="ButtonStyle.Light"
                                              Click="@Button2Click"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </RadzenTemplateForm>
    </ChildContent>
</RadzenContent>

<style>

    .rz-textarea{
        width: 100% !important;
    }
</style>