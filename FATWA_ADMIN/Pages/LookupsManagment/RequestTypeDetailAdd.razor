@using FATWA_DOMAIN.Models
@using FATWA_DOMAIN.Models.CaseManagment;
@layout MainLayout

@*< History Author = 'Ammaar Naveed' Date = '2024-06-04' Version = "1.0" Branch = "master"> UI fixations in pages and dialogs</History>*@
<!-- <History Author = 'Nabeel Ur Rehman' Date='2022-09-09' Version="1.0" Branch="master">Add New Legal Principle Tags</History> -->
<RadzenTemplateForm Data="@CmsChamberG2GLKP" Visible="@(CmsChamberG2GLKP != null)" TItem="RequestType" Submit="@SaveChanges">
    <ChildContent>
        <div class="col-12">
            <div class="form-group">
                <RadzenLabel Text="@(translationState.Translate("English_Name") + "*")"  />
                <RadzenTextBox Placeholder="@translationState.Translate("User_Name_English")" @bind-Value="@CmsChamberG2GLKP.Name_En" Name="Name_En" />
                <RadzenRegexValidator Component="Name_En" Text="@translationState.Translate("Only_English_Character_allowed")" Pattern="@RegexPatterns.EnglishPattern" />
                <RadzenRequiredValidator Component="Name_En" Text="@translationState.Translate("Required_Field")" />
                <RadzenLengthValidator Component="Name_En" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
            </div>
            <div class="form-group">
                <RadzenLabel Text="@(translationState.Translate("Arabic_Name") + "*")"  />
                <RadzenTextBox Placeholder="@translationState.Translate("User_Name_Arabic")" @bind-Value="@CmsChamberG2GLKP.Name_Ar" Name="Name_Ar" />
                <RadzenRegexValidator Component="Name_Ar" Text="@translationState.Translate("Only_Arabic_Characters_Are_Allowed")" Pattern="@RegexPatterns.ArabicPattern" />
                <RadzenRequiredValidator Component="Name_Ar" Text="@translationState.Translate("Required_Field")" />
                <RadzenLengthValidator Component="Name_Ar" Max="90" Text="@translationState.Translate("Max_Ninety_Characters")" />
            </div>
            <div class="popup-buttons-alignment">
                <RadzenButton ButtonType="Radzen.ButtonType.Submit" Style="margin-left: 10px; margin-right: 10px;" ButtonStyle="ButtonStyle.Primary" Text="@translationState.Translate("Save")" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@translationState.Translate("Cancel")" Click="@Button2Click" />
            </div>
        </div>
    </ChildContent>
</RadzenTemplateForm>